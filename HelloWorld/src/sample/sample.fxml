<?import javafx.geometry.Insets?>
<?import javafx.scene.layout.GridPane?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<GridPane fx:controller="sample.SampleController"
          stylesheets="/sample/sample.css"
          xmlns:fx="http://javafx.com/fxml" alignment="center" hgap="10" vgap="10">
    <Button text="Say 'Hello World' " onAction="#sayHelloWorld" alignment="CENTER"/>
    <Label GridPane.rowIndex="1" fx:id="helloWorld" alignment="CENTER" textFill="aquamarine"/>
    <Button text="Remove 'Hello World' " GridPane.rowIndex="5" onAction="#dontSayHelloWorld" alignment="CENTER"/>
    <Label GridPane.columnIndex="3" fx:id="score" textFill="cyan"/>
    <Button text="reset number" GridPane.rowIndex="6" onAction="#resetScore" alignment="CENTER"/>
</GridPane>